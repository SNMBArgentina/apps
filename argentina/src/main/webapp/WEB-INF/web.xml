<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- Core web-fragment -->
	<listener>
		<listener-class>org.fao.unredd.AppContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>lang-filter</filter-name>
		<filter-class>org.fao.unredd.portal.LangFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>lang-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- index call -->
	<servlet>
		<servlet-name>index-servlet</servlet-name>
		<servlet-class>org.fao.unredd.portal.IndexHTMLServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>index-servlet</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>

	<!-- main requirejs module -->
	<servlet>
		<servlet-name>mainjs-servlet</servlet-name>
		<servlet-class>org.fao.unredd.portal.MainJSServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>mainjs-servlet</servlet-name>
		<url-pattern>/modules/main.js</url-pattern>
	</servlet-mapping>

	<!-- static folder content -->
	<servlet>
		<servlet-name>static-content-servlet</servlet-name>
		<servlet-class>org.fao.unredd.portal.ClientContentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>static-content-servlet</servlet-name>
		<url-pattern>/static/*</url-pattern>
		<url-pattern>/modules/*</url-pattern>
		<url-pattern>/jslib/*</url-pattern>
		<url-pattern>/styles/*</url-pattern>
	</servlet-mapping>

	<!-- config call -->
	<servlet>
		<servlet-name>config-servlet</servlet-name>
		<servlet-class>org.fao.unredd.portal.ConfigServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>config-servlet</servlet-name>
		<url-pattern>/config.js</url-pattern>
	</servlet-mapping>

	<!-- Error management -->
	<filter>
		<filter-name>error-filter</filter-name>
		<filter-class>org.fao.unredd.portal.ErrorFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>error-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- GeoSolution's Proxy Servlet -->
	<context-param>
		<param-name>proxyPropPath</param-name>
		<param-value>/proxy.properties</param-value>
	</context-param>
	<servlet>
		<servlet-name>HttpProxy</servlet-name>
		<servlet-class>it.geosolutions.httpproxy.HTTPProxy</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HttpProxy</servlet-name>
		<url-pattern>/proxy</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<resource-ref>
		<description>Application database</description>
		<res-ref-name>jdbc/unredd-portal</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!-- base web-fragment -->

	<listener>
		<listener-class>org.fao.unredd.IndicatorsContextListener</listener-class>
	</listener>

	<!-- indicators -->
	<servlet>
		<servlet-name>indicator-list-servlet</servlet-name>
		<servlet-class>org.fao.unredd.indicators.IndicatorListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>indicator-list-servlet</servlet-name>
		<url-pattern>/indicators</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>indicator-data-servlet</servlet-name>
		<servlet-class>org.fao.unredd.indicators.IndicatorDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>indicator-data-servlet</servlet-name>
		<url-pattern>/indicator</url-pattern>
	</servlet-mapping>

	<!-- Feedback web-fragment -->

	<listener>
		<listener-class>org.fao.unredd.feedback.servlet.FeedbackContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>create-comment-servlet</servlet-name>
		<servlet-class>org.fao.unredd.feedback.servlet.CreateCommentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>create-comment-servlet</servlet-name>
		<url-pattern>/create-comment</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>verify-comment-servlet</servlet-name>
		<servlet-class>org.fao.unredd.feedback.servlet.VerifyCommentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>verify-comment-servlet</servlet-name>
		<url-pattern>/verify-comment</url-pattern>
	</servlet-mapping>

</web-app>
